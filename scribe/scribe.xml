<grammar version="1.0" xml:lang="fr-FR" mode="voice" root="rule_scribe" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
<rule id="rule_scribe" scope="public">
	<example>SARAH relance le scribe</example>
	<tag>out.action=new Object();</tag>

	<item>SARAH</item>
	<one-of>
		<item>relance le scribe
			<tag>out.action._attributes.tts="Ok . Le scribe sera prêt dans quelques secondes ..."; out.action.action="relaunch";</tag>
		</item>
		<item>rafraîchi
			<tag>out.action.action="refresh";</tag>
		</item>

	</one-of>
	<tag>out.action._attributes.uri="http://127.0.0.1:8080/sarah/scribe";</tag>
</rule>
</grammar>